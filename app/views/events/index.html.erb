<h1>Listing events</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Date</th>
    <th>No of sign-ups</th>
    <th colspan="3"></th>
  </tr>
 
  <% @events.each do |event| %>
    <tr>
      <td><%= event.title %></td>
      <td><%= event.date %></td>
      <td><%= event.attendees.count('event_id') %></td>
      <td><%= link_to 'Show', event_path(event) %></td>
      <td><%= link_to 'Edit', edit_event_path(event) %></td>
      <td><%= link_to 'Delete', event_path(event),
              method: :delete,
              data: { confirm: 'Are you sure you want to delete the event?' } %></td>
    </tr>
  <% end %>
</table>